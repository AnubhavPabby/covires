<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.ProvideResourcesFormFragment">

    <!-- TODO: Update blank fragment layout -->

    <View
        android:id="@+id/view4"
        android:layout_width="230dp"
        android:layout_height="3dp"
        android:layout_marginTop="5dp"
        android:background="#000000"
        app:layout_constraintEnd_toEndOf="@+id/tvResHead"
        app:layout_constraintStart_toStartOf="@+id/tvResHead"
        app:layout_constraintTop_toBottomOf="@+id/tvResHead" />

    <TextView
        android:id="@+id/tvResHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="28dp"
        android:fontFamily="monospace"
        android:text="Helping Hand"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvResHead">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/etResProvFullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="16dp"
                android:background="@drawable/textbox"
                android:drawablePadding="15dp"
                android:ems="10"
                android:hint="FullName (Company or Individual)"
                android:inputType="textPersonName|textMultiLine" />

            <EditText
                android:id="@+id/etResProvEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="16dp"
                android:background="@drawable/textbox"
                android:drawablePadding="15dp"
                android:ems="10"
                android:hint="Email-Id"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/etResProvWeb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="16dp"
                android:background="@drawable/textbox"
                android:drawablePadding="15dp"
                android:ems="10"
                android:hint="Website Name"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/etResProvContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="16dp"
                android:background="@drawable/textbox"
                android:drawablePadding="15dp"
                android:ems="10"
                android:hint="Contact"
                android:maxLength="10"
                android:inputType="phone" />

            <EditText
                android:id="@+id/etResProvState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="16dp"
                android:background="@drawable/textbox"
                android:drawablePadding="15dp"
                android:ems="10"
                android:hint="State"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/etResProvCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="16dp"
                android:background="@drawable/textbox"
                android:drawablePadding="15dp"
                android:ems="10"
                android:hint="City"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/etResProvPincode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="16dp"
                android:background="@drawable/textbox"
                android:drawablePadding="15dp"
                android:ems="10"
                android:hint="Pincode"
                android:inputType="numberSigned"
                android:maxLength="6" />

            <EditText
                android:id="@+id/etResProvDistrict"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="16dp"
                android:background="@drawable/textbox"
                android:drawablePadding="15dp"
                android:ems="10"
                android:hint="District"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/etResProvResType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="16dp"
                android:background="@drawable/textbox"
                android:drawablePadding="15dp"
                android:ems="10"
                android:hint="Resource Type"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/etResProvResDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="132dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="20dp"
                android:paddingHorizontal="24dp"
                android:paddingVertical="16dp"
                android:background="@drawable/textbox"
                android:drawablePadding="15dp"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Describe Your Resource"
                android:inputType="textMultiLine" />

            <Button
                android:id="@+id/btnResProvSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="35dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="30dp"
                android:layout_gravity="center"
                android:background="@drawable/button_3"
                android:text="Submit" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>